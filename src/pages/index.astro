---
import "../styles/global.css";
import "../styles/bullet.css";
import Layout from "../layouts/Layout.astro";
const title = "Home";
---

<!-- todo: fix "student-powered flight" centering on mobile -->
<!-- todo: fix pic weird outline -->
  
<Layout pageTitle={title}>
	<!-- background video -->
	<div class="bigVid">
		<h1 class="main-para">
			Student-Powered<br>Flight
		</h1>
		<video playsinline autoplay muted loop id="background-video">
			<source src="/video.mp4" type="video/mp4">
		</video>
	</div>
		<div class="bgImage">
			<div class="bullet">
				<p>
					At
					<br><b class="aero-bullet">Aero</b><b class="princeton-bullet">Princeton</b><b class="princeton-bullet" style="color: black">,</b>
					<br>we believe that <b>everyone</b>
					<br>should be able to fly.
				</p>

				<div class="bullet-image">
					<img src="/plane1.png">
				</div>
			</div>
			<hr size="2px" color="grey">
			<div class="text-block">
				<div style="padding:0px; padding-top: 10px;">
					<p> We are a group run by Princeton University students, 
						whose mission is to provide students with hands-on experience, 
						teaching individuals skills in riveting, wiring, and metal work,
						etc. and applying them with strategy, design, and problem 
						solving to <em>create fully functional FAA-approved airplanes</em>, 
						helping to expand upon our in-class education. Eventually 
						we hope to expand our organization to start similar clubs at 
						other colleges, and create what we believe to be the first 
						air-race of this kind. </p>
				</div>
			</div>
			<hr size="2px" color="grey">
			<div class="bullet">
				<div class="bullet-image">
					<img src="/plane2.png">
				</div>
				<p style="margin-bottom: 50px;">
					<a class="sub-heading" href="/join">Join Us</a>
					<br><br>in building a kit plane 
					<br>and experience the thrill
					<br>of flight.
				</p>
			</div>
	</div>
	<!-- <img class="main-photo" src="/Zenith_Plane.jpg">  -->
</Layout>