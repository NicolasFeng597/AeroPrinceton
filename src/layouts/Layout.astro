---
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { string } from "astro:schema";
import { ClientRouter, ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
	body: string;
	href: string;
	description?: string;
}

const {href, title = "AeroPrinceton", body, description = "Aeroprinceton is a nonprofit with the purpose of providing education in airplane construction" } = Astro.props;
const frontmatter = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<link href="https://use.typekit.net/sjw1sgl.css" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Limelight&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<link href='https://fonts.googleapis.com/css?family=Limelight' rel="stylesheet">
		<link href='https://fonts.googleapis.com/css?family=Rajdhani' rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<ClientRouter></ClientRouter>
		<!-- <title>{frontmatter.title}</title> -->
		<title> {title} </title>
	</head>
	<body>
		<Navigation />
		<slot />
		<Footer />
	</body>
</html>
